<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:visibility="visible"
    android:id="@+id/bottom_input_layout"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/send_gift_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_cake_grey600_48dp" />

    <ImageView
        android:id="@+id/send_recorder_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/send_recorder_button"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/message_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:windowSoftInputMode="adjustResize"
            android:background="@null"
            android:hint="说点什么吧"/>

        <Button
            android:id="@+id/btn_send_message"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="发送"
            android:textColor="@color/colorWhite"
            android:background="@color/colorDarkOrange"
            android:layout_marginRight="6dp"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:visibility="visible"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/gift_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:src="@drawable/ic_cake_grey600_48dp"/>

</LinearLayout>
